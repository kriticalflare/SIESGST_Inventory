<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminClass.Admin_Main">

    <FrameLayout
        android:id="@+id/admin_fragment"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/admin_bottom_navigation"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/admin_bottom_navigation"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/admin_bottom_navigation"
        android:background="#f4f4f4"
        >

    </android.support.design.widget.BottomNavigationView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_components"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="16dp"
        android:foreground="@drawable/ic_add_black_24dp"
        android:backgroundTint="@drawable/gradient_rounded_button"
        />
</android.support.constraint.ConstraintLayout>