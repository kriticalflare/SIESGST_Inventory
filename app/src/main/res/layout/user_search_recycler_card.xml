<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/user_search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f4f4f4"
        app:cardCornerRadius="10dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/user_search_card_component"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wheels"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/user_search_card_category_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_search_card_component"
                android:layout_margin="10dp"
                android:text="Category : "
                />
            <TextView
                android:id="@+id/user_search_card_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_search_card_component"
                android:layout_margin="10dp"
                android:text="Chassis"
                app:layout_constraintLeft_toRightOf="@id/user_search_card_category_heading"/>
            <TextView
                android:id="@+id/user_search_card_date_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_search_card_category_heading"
                android:layout_marginLeft="10dp"
                android:text="Date / Time :"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/user_search_card_date"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/user_search_card_date_heading"
                app:layout_constraintTop_toBottomOf="@id/user_search_card_category"
                android:text="12 Jun 2019 , 12:20 pm"
                />
            <TextView
                android:id="@+id/user_search_card_admin_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_search_card_date_heading"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Added By : "
                />
            <TextView
                android:id="@+id/user_search_card_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_search_card_date"
                app:layout_constraintLeft_toRightOf="@id/user_search_card_admin_heading"
                android:text="Admin - 1 "
                />
            <TextView
                android:id="@+id/user_search_card_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="20dp"
                android:text="50"
                android:textSize="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@+id/user_search_card_count"
                app:layout_constraintTop_toTopOf="@id/user_search_card_count"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>