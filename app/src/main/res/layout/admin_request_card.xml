<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_request_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#f4f4f4"
        app:cardCornerRadius="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/admin_request_card_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:text="Wheels"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/admin_request_card_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/admin_request_card_component"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Karthikraj"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/admin_request_card_uemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/admin_request_card_uname"
                android:layout_marginLeft="10dp"
                android:text="naidukarthi2193@gmail.com"

                />
            <TextView
                android:id="@+id/admin_request_card_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/admin_request_card_uemail"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="01 Jul 2019 , 4:44:00 PM"
                />
            <TextView
                android:id="@+id/admin_request_card_requestcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                />
            <View
                android:id="@+id/divider1"
                android:background="#000000"
                android:layout_width="50dp"
                android:layout_height="4dp"
                app:layout_constraintRight_toRightOf="@id/admin_request_card_requestcount"
                app:layout_constraintLeft_toLeftOf="@id/admin_request_card_requestcount"
                app:layout_constraintTop_toBottomOf="@id/admin_request_card_requestcount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/admin_request_card_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/divider1"
                app:layout_constraintLeft_toLeftOf="@id/divider1"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                android:text="20"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>