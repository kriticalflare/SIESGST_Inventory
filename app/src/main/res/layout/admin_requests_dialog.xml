<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Request"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_heading"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/request_dialog_component_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Component : "
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/request_dialog_uname_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/request_dialog_component_heading"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="Name : "
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/request_dialog_uemail_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/request_dialog_uname_heading"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="Email : "
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/request_dialog_datetime_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/request_dialog_uemail_heading"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="Date/Time : "
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/request_dialog_requestcount_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/request_dialog_datetime_heading"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Request Count : "
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/request_dialog_availcount_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/request_dialog_requestcount_heading"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Available Count : "
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/request_dialog_accept_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/request_dialog_availcount_heading"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/gradient_rounded_button"
        android:text="Accept Request"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/request_dialog_reject_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/request_dialog_accept_request"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:layout_goneMarginRight="20dp"
        android:text="Reject Request"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/request_dialog_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginRight="20dp"
        android:text="Wheel"
        app:layout_constraintBottom_toBottomOf="@+id/request_dialog_component_heading"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/request_dialog_component_heading"
        app:layout_constraintTop_toTopOf="@id/request_dialog_component_heading" />

    <TextView
        android:id="@+id/request_dialog_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginRight="20dp"
        android:text="Karthikraj"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/request_dialog_uname_heading"
        app:layout_constraintTop_toTopOf="@id/request_dialog_uname_heading"
        app:layout_constraintBottom_toBottomOf="@id/request_dialog_uname_heading"
        />

    <TextView
        android:id="@+id/request_dialog_uemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginRight="20dp"
        android:text="naidukarthi2193@gmail.com"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/request_dialog_uemail_heading"
        app:layout_constraintTop_toTopOf="@id/request_dialog_uemail_heading"
        app:layout_constraintBottom_toBottomOf="@id/request_dialog_uemail_heading"
        />

    <TextView
        android:id="@+id/request_dialog_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginRight="20dp"
        android:text="01 Jun 2019, 6:27:19 PM"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/request_dialog_datetime_heading"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/request_dialog_datetime_heading"
        app:layout_constraintTop_toTopOf="@id/request_dialog_datetime_heading" />
    <TextView
        android:id="@+id/request_dialog_requestcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text="5"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/request_dialog_requestcount_heading"
        app:layout_constraintBottom_toBottomOf="@id/request_dialog_requestcount_heading"
        />
    <TextView
        android:id="@+id/request_dialog_availcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text="5"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/request_dialog_availcount_heading"
        app:layout_constraintBottom_toBottomOf="@id/request_dialog_availcount_heading"
        />






</androidx.constraintlayout.widget.ConstraintLayout>